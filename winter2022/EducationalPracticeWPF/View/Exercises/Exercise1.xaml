<Page x:Class="EducationalPracticeWPF.View.Exercises.Exercise1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Exercise1">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label FontSize="18" Content="This query displays the country that produced the most electricity in 2015" FontWeight="Light"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label FontSize="18" Content="{Binding Path = Country.Code}" Margin="0, 0, 0, 0"/>
                <Label FontSize="18" Content="{Binding Path = Country.Name}" Margin="10, 0, 0, 0"/>
                <Label FontSize="18" Content="{Binding Path = Year}" Margin="10, 0, 0, 0"/>
                <Label FontSize="18" Content="{Binding Path = Value}" Margin="10, 0, 0, 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
