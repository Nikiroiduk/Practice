<Window x:Class="EducationalPracticeWPF.View.AddNewRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddNewRecord" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Text="{Binding Path=Country.Code}"/>
            <TextBox Text="{Binding Path=Country.Name}"/>
            <TextBox Text="{Binding Path=Year}"/>
            <TextBox Text="{Binding Path=Value}"/>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="Add" Click="Button_Click"/>
                <Button Content="Cancel" Margin="20, 0, 0, 0" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
